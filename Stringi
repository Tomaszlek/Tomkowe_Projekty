#include <iostream>
#include <string>
using namespace std;

void funkcja()
{
    string wyrazy_usera [10];
    string przecinek = ", ";
    int licznik = 1;

do
{
      cout<<"Podaj jakis wyraz:";
      cin>>wyrazy_usera[licznik-1];

      wyrazy_usera[licznik-1]+= przecinek;
      licznik++;
}while(licznik<=10);

    int cos = 1;

do
{
        cout<<wyrazy_usera[cos-1];
        cos++;
}while (cos<=10);
}
//////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////
int main()
{
    funkcja();
    return 0;
}
